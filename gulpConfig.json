{	

	"baseOutputDir": "./dist/",
	"sourceDir": "./",
	"tmpDir": "./dist/tmp/",
	"bowerDir": "./bower_components/",
	"sourcemapsDir": "../../maps/",
	"cacheBust": true,

	"uglify": true,
	"uglifyMangle": true,
	"minifyHTML": true,
	"minifyJS": true,
	"minifyCSS": true,

	"templates": {
		"compiler": "handlebars",
		"nameSpace": "NovaWeb.Templates"
	},

	"files": {
		"vendor": [
	        "./bower_components/jquery/dist/jquery.js",
	        "./bower_components/handlebars/handlebars.runtime.js"
	    ],
	    "js": [
	        "js/**/*.js"
	    ],
	    "html": [
	        "**/*.html",
	        "!dist/**/*.html",
	        "!node_modules/**/*.html",
	        "!bower_components/**/*.html"
	    ],
	    "sass": "scss/",
	    "images": "img/**/*",

	    "toCopy": [
	        "./**/*",
	        "./.htaccess",
	        "!./gulpfile.js",
	        "!./gulpConfig.json",
	        "!./dist/",
	        "!dist/**/*",
	        "!bower_components/",
	        "!bower_components/**/*",
	        "!node_modules/",
	        "!node_modules/**/*",
	        "!js/",
	        "!js/**/*",
	        "!scss/",
	        "!scss/**/*",
	        "!img/",
	        "!img/**/*"
	    ]
	},

	"outputDir": {

		"vendor": "./dist/js/",
		"js": "./dist/js/",
		"html": "./dist/",
		"sass": "./dist/css/",
		"images": "./dist/img" 

	},


	"outputNames": {

		"vendor": "vendor.js",
		"js": "app.js",
		"sass": "style"

	}

}