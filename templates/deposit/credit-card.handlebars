<div id="deposit_page" class="deposit-page form-wrapper">
    <form id="deposit_credit_card_form">
        <div class="main-header">
            <h4>{{t "deposit.deposit"}}</h4>
        </div>

        <div id="deposit_methods" class="deposit-methods row">
            <div id="credit_card_method" class="credit-card-method col-lg-6 text-center">
                <img src="/assets/images/deposit-credit-card-active.jpg">
            </div>
            <div id="skrill_method" class="skrill-method col-lg-6 text-center">
                <img src="/assets/images/deposit-skrill-inactive.jpg">
            </div>
        </div>

        <div class="card-details panel panel-default">
            <div class="panel-heading">{{t "deposit.cardDetails" }}</div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="control-label">{{t "deposit.name"}} *</label>
                    <input name="cardName" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label">{{t "deposit.cardNumber"}} *</label>
                    <input name="cardNumber" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label">{{t "deposit.expiryDate"}} *</label>
                    <div class="expire-time">
                        <select class="expire-month col-lg-6">
                            {{#for 1 12}}
                                <option>{{this}}</option>
                            {{/for}}
                        </select>
                        <select class="expire-year col-lg-6">
                            {{#for 2015 2025}}
                                <option>{{this}}</option>
                            {{/for}}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">{{t "deposit.verificationNumber"}} *</label>
                    <input name="verificationNumber" class="form-control">
                </div>
            </div>
        </div>
        <div class="card-details panel panel-default">
            <div class="panel-heading">{{t "deposit.billingDetails" }}</div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="control-label">{{t "deposit.addressLine"}} *</label>
                    <input name="addressLine1" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label">{{t "deposit.city"}} *</label>
                    <input name="city" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label">{{t "deposit.postCode"}} *</label>
                    <input name="postcode" class="form-control">
                </div>
            </div>
        </div>
        <div class="row btn-container">
            <div class="col-lg-12 text-center">
                <button class="form-control" type="submit">{{t "deposit.continue"}}</button>
            </div>
        </div>
    </form>
</div>