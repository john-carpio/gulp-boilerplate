<div class="loading-container">
    {{> ui/loading}}
</div>

<form id="forgot_password_form" class="forgot-password">
    <div class="panel panel-default">

        <div class="panel-heading">
            <h5 class="panel-title panel-padding">{{t "forgotPassword.step1"}}</h5>
        </div>

        <div class="panel-body">
            <div class="form-group">
                <label for="email">{{t "forgotPassword.labelEmail"}} <strong class="required">*</strong></label>
                <div>
                    <input id="email" name="email">
                    <label class="no-email-error" for="email">{{t "forgotPassword.cannotFindEmail"}}</label>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="offset-wrapper">
                <button type="submit" class="btn-dark">{{t "forgotPassword.buttonSubmit"}}</button>
                <button type="button" class="btn-dark btn-cancel">{{t "forgotPassword.cancel"}}</button>
            </div>
        </div>
    </div> {{!-- end: .panel --}}
</form>